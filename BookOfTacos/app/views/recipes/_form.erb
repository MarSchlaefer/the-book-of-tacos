


<% if flash[:error] %>
  <% flash[:error].each do |e| %>
  <%= e %>
  <% end %>
<% end %>

<%= form_for @recipe do |f| %>
  <p><%= f.label :title %></p>
  <%= f.text_field :title %>
  <p><%= f.label :ingredients %></p>
  <%= f.text_field :ingredients %>
  <p> <%= f.label :description %> </p>
  <%= f.text_area :description %><br>
  <%= f.submit "Submit Recipe" %>
<% end %>
